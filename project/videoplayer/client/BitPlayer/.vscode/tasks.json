{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake Configure",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-G",
        "MinGW Makefiles",
        "-DCMAKE_PREFIX_PATH=D:/Qt-/6.9.1/mingw_64",
        "-S",
        ".",
        "-B",
        "build"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "CMake Build",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "build"
      ],
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": []
    },
    {
      "label": "Clean Build",
      "type": "shell",
      "command": "Remove-Item",
      "args": [
        "-Recurse",
        "-Force",
        "build"
      ],
      "problemMatcher": []
    },
    {
      "label": "Run BitPlayer",
      "type": "shell",
      "command": "${workspaceFolder}/build/BitPlayer.exe",
      "problemMatcher": [],
      "dependsOn": [
        "CMake Build"
      ]
    }
  ]
}



















